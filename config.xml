<?xml version='1.0' encoding='utf-8'?>
<widget id="net.cloudseat.mpdova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mpdova</name>
    <description>
        A Mobile client for Music Player Daemon
    </description>
    <author email="app@zerg.cc" href="http://zerg.cc">
        Ai Chen
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <icon src="www/image/logo.png" />
    <preference name="StatusBarBackgroundColor" value="#fff" />
</widget>
